{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "es5",
      "noImplicitAny": true,
      "declaration": true,
      "sourceMap": true,
      "baseUrl": ".",
      "preserveConstEnums": true,
      "lib": [
          "es2016", 
          "dom", 
          "esnext",
          "dom.iterable",
          "scripthost", 
      ],
      "declarationDir": "./types",
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "noUnusedParameters": false,
      "pretty": true,
      "allowUnreachableCode": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules", 
    "src/common"
  ]
}